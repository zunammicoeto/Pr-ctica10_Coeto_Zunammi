EJERCICIO 1
// abrir librerías //
#include <stdio.h>

/*
Este programa nos da una sucesión infinita de números naturales 
*/

//Bloque de variables //

void main()
{
	int N, CONT, AS;
  // El error se encontraba en el valor de AS//
	AS<=N;    
  //Después paso al contador, el cual cambie que fuera a <=1//
	CONT<=1;
  //El error se encontraba en la diagonal n//
	printf("TECLEA UN NUMERO:\n");
	scanf("%i",&N);
	while(CONT<=N)
	{
		AS=(AS+CONT);
		CONT=(CONT+2);
	}
	printf("\nEL RESULTADO ES %i\n", AS);
}




EJERCICIO 2
//abrir  librerías// 
#include <stdio.h>

/*
Este programa nos dice la tabla del 1 hasta el 10
*/ 

//bloque de variables//

void main()
{
	int i, j;
  //El error estaba en la igualdad de i con el 10//
	for(i=1; i<=10; i++)
	{
		printf("\nTabla del %i\n", i);
		for(j=1; j==10; j++)
		{
			printf("%i X %i = %i\n", i, j, i*j);
		}
	}
}


EJERCICIO 3
//abrir librerías//
#include <stdio.h>
#include <math.h>

/*
Este programa genera 
*/

//bloque de variables//
void main()
{
	int K, X, AP, N;
	float AS;
  //El error estaba en el printf en el valor que se le otorga a K//
	printf("EL TERMINO GENERICO DE LA SERIE ES: X^K/K!");
	printf("\nN=");
	scanf("%d",&N);
	printf("X=");
	scanf("%d",&X);
	K=0;
	AP=1;
	AS=0;
  //Tambien habia otro error en el while, creo que era en la K//
	while(K<=N)
	{
		AS=AS+pow(X,K)/AP;
		K=K+1;
		AP=AP*K;
	}
	printf("SUM=%le",AS);
}

